if [[ ! -d $HOME/.pyenv ]]; then
    echo "Install pyenv"
    git clone https://github.com/yyuu/pyenv.git $HOME/.pyenv
    export PYENV_ROOT="$HOME/.pyenv"
    export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init -)"
    CFLAGS="-I$(xcrun --show-sdk-path)/usr/include" pyenv install -v 2.7.10
    pyenv global 2.7.10
else
    export PYENV_ROOT="$HOME/.pyenv"
    export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init -)"
fi
